@page
@using RestaurantOrderSystem.Models
@model RestaurantOrderSystem.Pages.TableModel
@{
    <div class="table-info-container">
        <h2>Table @Model.Table.Number</h2>
        <p>ID: @Model.Table.Id</p>
        <p>Row: @Model.Table.Row, Col: @Model.Table.Col</p>
    </div>
    <div class="activate-table-container">
        @if (Model.Table.CurrentOrder != null)
        {
            <a asp-page="/Order" asp-route-id="@Model.Table.CurrentOrder.Id" class="btn btn-primary">Open Current Order</a>
        }
        else
        {
            <form method="post" asp-page="/Order" asp-page-handler="AddOrder">
                <input type="hidden" name="tableId" value="@Model.Table.Id" />
                <label>Customer Count</label>
                <input type="number" name="customerNum" required />
                <button type="submit" class="btn-primary">Make an Order</button>
            </form>
        }
        
        
    </div>
    
}
